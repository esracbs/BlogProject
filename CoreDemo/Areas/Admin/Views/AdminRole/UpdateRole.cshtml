@using CoreDemo.Models
@model RoleUpdateViewModel
@{
    ViewData["Title"] = "UpdateRole";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Rol Düzenleme Sayfası</h1>
<form method="post">
    <div class="form-group">
        <label>Role ID</label>
        <input type="text" value="@Model.Id" name="Id" class="form-control"/>
    </div>
    <div class="form-group">
        <label>Rol Başlığı</label>
        <input type="text" value="@Model.name" name="name" class="form-control"/>
    </div>
    <button class="btn btn-success">Rolü Güncelle</button>
</form>
